---
import Layout from "../layouts/Layout.astro"
import { createClient } from "@supabase/supabase-js"

const user = await Astro.locals.currentUser();
const nombreUsuario = user?.firstName || user?.username || "Usuario";

// --- 1. CÁLCULO MANUAL DE FECHA (MÉRIDA UTC-6) ---
const now = new Date();
const offsetMerida = 6 * 60 * 60 * 1000; 
const nowMerida = new Date(now.getTime() - offsetMerida);

const year = nowMerida.getUTCFullYear();
const month = String(nowMerida.getUTCMonth() + 1).padStart(2, '0');
const day = String(nowMerida.getUTCDate()).padStart(2, '0');

const fechaSQL = `${year}-${month}-${day}`;

// Rango del día completo en Mérida
const inicioDia = `${fechaSQL}T00:00:00-06:00`;
const finDia = `${fechaSQL}T23:59:59-06:00`;

// --- 2. CONSULTA A SUPABASE (ADAPTADA A TU ESQUEMA) ---
const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.SUPABASE_KEY
);

// [CORRECCIÓN]: Usamos 'fecha_hora' y 'nombre' directo
const { data: dataCitas, error } = await supabase
    .from('citas')
    .select('id, fecha_hora, nombre, motivo') 
    .gte('fecha_hora', inicioDia)
    .lte('fecha_hora', finDia)
    .order('fecha_hora', { ascending: true }); // Ordenamos por fecha_hora

if (error) console.error("Error Dashboard:", error);

// --- 3. PROCESAMIENTO ---
const citasHoy = dataCitas || [];
const cantidadCitas = citasHoy.length;
const hayCitas = cantidadCitas > 0;

// Obtener datos de la próxima cita (Más simple ahora)
let proximaHora = "--:--";
let proximaNombre = "Paciente";

if (hayCitas) {
    const cita = citasHoy[0];
    proximaNombre = cita.nombre || "Paciente";
    
    // Extraer solo la hora de la fecha completa (Ej: 2026-01-10T11:00:00 -> 11:00)
    if (cita.fecha_hora) {
        const dateObj = new Date(cita.fecha_hora);
        proximaHora = dateObj.toLocaleTimeString('es-MX', { 
            hour: '2-digit', 
            minute: '2-digit',
            hour12: false,
            timeZone: 'America/Merida'
        });
    }
}

// Fecha visual bonita
const fechaHoyTexto = new Date().toLocaleDateString('es-MX', { 
    timeZone: 'America/Merida',
    weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
});
---

<Layout title="Dashboard - Lab-Somno">
    <main class="max-w-6xl mx-auto pt-10 pb-20 px-6">

        <div class="mb-10 flex flex-col md:flex-row justify-between items-end gap-4 pb-2">
            <div>
                <p class="text-blue-400 font-bold uppercase tracking-wider text-xs mb-1">Panel de Control</p>
                <h1 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight">Hola, <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400">{nombreUsuario}</span></h1>
                <p class="text-gray-400 mt-2 text-lg">¿Qué deseas hacer hoy?</p>
            </div>
            <div class="text-right hidden md:block">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 text-gray-400 text-sm">
                    <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
                    {fechaHoyTexto}
                </div>
            </div>
        </div>

        <div class="mb-10 animate-fade-in-up">
            {hayCitas ? (
                // CASO A: HAY CITAS
                <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-blue-900/40 to-indigo-900/40 border border-blue-500/30 p-6 flex flex-col md:flex-row items-center justify-between gap-6 shadow-lg shadow-blue-900/10">
                    
                    <div class="absolute top-0 left-0 w-full h-full bg-blue-500/5 pattern-grid-lg pointer-events-none"></div>
                    <div class="absolute -left-4 -top-4 w-24 h-24 bg-blue-500/20 rounded-full blur-2xl"></div>

                    <div class="relative z-10 flex items-center gap-5">
                        <div class="relative">
                            <div class="w-16 h-16 rounded-2xl bg-blue-600 flex items-center justify-center shadow-lg shadow-blue-600/40">
                                <span class="text-3xl font-extrabold text-white">{cantidadCitas}</span>
                            </div>
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-red-500 border-2 border-gray-900 rounded-full animate-pulse"></div>
                        </div>
                        
                        <div>
                            <h3 class="text-xl font-bold text-white mb-1">Citas programadas para hoy</h3>
                            <p class="text-blue-200 text-sm">
                                {cantidadCitas === 1 
                                    ? `Tienes 1 paciente esperando atención.` 
                                    : `Tienes ${cantidadCitas} pacientes en agenda.`}
                            </p>
                            
                            <div class="mt-2 inline-flex items-center gap-2 px-3 py-1 rounded-lg bg-blue-950/50 border border-blue-800 text-xs text-blue-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                                Próxima: <span class="font-bold text-white">{proximaHora}</span> - {proximaNombre}
                            </div>
                        </div>
                    </div>

                    <div class="relative z-10 w-full md:w-auto">
                        <a href="/citas" class="flex items-center justify-center gap-2 w-full md:w-auto px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-bold rounded-xl transition-all shadow-lg hover:shadow-blue-500/25 group">
                            Ver Agenda
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                            </svg>
                        </a>
                    </div>
                </div>
            ) : (
                // CASO B: NO HAY CITAS
                <div class="relative overflow-hidden rounded-2xl bg-gray-800/40 border border-gray-700/50 p-6 flex flex-col md:flex-row items-center justify-between gap-4">
                    <div class="flex items-center gap-5">
                        <div class="w-14 h-14 rounded-2xl bg-emerald-500/10 flex items-center justify-center border border-emerald-500/20">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-white">Todo al día</h3>
                            <p class="text-gray-400 text-sm">No hay citas programadas para hoy, {fechaHoyTexto}.</p>
                        </div>
                    </div>
                </div>
            )}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[180px]">

            <a href="/citas" class="group relative md:col-span-2 bg-gradient-to-br from-gray-800 to-gray-900 border border-white/10 rounded-3xl p-8 overflow-hidden hover:border-purple-500/50 transition-all duration-300 hover:shadow-2xl hover:shadow-purple-900/20 hover:scale-[1.01]">
                <div class="absolute top-0 right-0 w-64 h-64 bg-purple-600/20 rounded-full blur-3xl -mr-16 -mt-16 transition-all group-hover:bg-purple-600/30"></div>
                
                <div class="relative z-10 h-full flex flex-col justify-between">
                    <div class="flex justify-between items-start">
                        <div class="p-3 bg-purple-500/20 rounded-2xl text-purple-300 group-hover:text-white group-hover:bg-purple-500 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" /></svg>
                        </div>
                        <span class="px-3 py-1 bg-white/5 rounded-full text-xs font-medium text-gray-400 border border-white/5 group-hover:border-purple-500/30 transition-colors">Gestión de Citas</span>
                    </div>
                    <div>
