---
interface Props {
	href: string;
	text?: string;
}

const { href, text = "Volver" } = Astro.props;
---

<a href={href} class="fixed top-4 left-4 md:top-8 md:left-8 z-50 flex items-center gap-2 text-white/50 hover:text-white transition-colors group">
    <div class="p-2 rounded-full bg-gray-900/50 backdrop-blur-md border border-white/10 group-hover:bg-white/10 group-hover:border-white/20 transition-all shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
        </svg>
    </div>
    
    <span class="text-sm font-medium hidden md:block opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 bg-gray-900/80 backdrop-blur px-3 py-1 rounded-full border border-white/10">
        {text}
    </span>
</a>