---
interface Option {
    label: string; // Ej: "Nunca"
    value: number; // Ej: 0
}

interface Question {
    id: string;
    text: string;
}

interface Props {
    instruction?: string; // Ej: "2) Use la siguiente escala..."
    scaleLabel?: string; // Ej: "PROBABILIDAD DE QUEDAR DORMIDO"
    questions: Question[];
    options: Option[];
}

const { instruction, scaleLabel, questions, options } = Astro.props;
---

<div class="w-full font-sans text-gray-700">
    {/* 1. Instrucciones superiores */}
    {instruction && (
        <div class="mb-4 text-lg text-center px-4">
        <p>{instruction}</p>
        </div>
    )}

    {/* 2. Etiqueta de la escala */}
    {scaleLabel && (
        <div class="mb-6 text-blue-600 uppercase text-sm font-semibold tracking-wide text-center px-4">
        {scaleLabel}
        </div>
    )}

    {/* ========================================= */}
    {/* VISTA DE ESCRITORIO (Tabla) - Se oculta en móviles */}
    {/* ========================================= */}
    <div class="hidden md:block overflow-x-auto">
        <table class="w-full min-w-[700px] border-collapse">
        <thead>
            <tr>
            <th class="p-4 text-left w-2/5"></th>
            {options.map((option) => (
                <th class="p-4 text-center w-[15%] align-bottom">
                <div class="flex flex-col items-center justify-end h-full">
                    <span class="text-sm font-medium text-gray-900">
                    {option.label}
                    </span>
                </div>
                </th>
            ))}
            </tr>
        </thead>
        <tbody>
            {questions.map((question, index) => (
            <tr class={`${index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}`}>
                <td class="p-6 text-base font-normal text-gray-700 leading-snug border-t border-gray-100">
                {question.text}
                </td>
                {options.map((option) => (
                <td class="p-4 text-center border-t border-gray-100">
                    <div class="flex justify-center items-center">
                    <input
                        type="radio"
                        name={question.id}
                        value={option.value}
                        class="w-6 h-6 accent-blue-600 cursor-pointer"
                        required
                    />
                    </div>
                </td>
                ))}
            </tr>
            ))}
        </tbody>
        </table>
    </div>

    {/* ========================================= */}
    {/* VISTA MÓVIL (Lista de Tarjetas) - Se muestra solo en móviles */}
    {/* ========================================= */}
    <div class="md:hidden flex flex-col">
        {questions.map((question, index) => (
        <div
            class={`p-4 border-t border-gray-100 ${
            index % 2 === 0 ? 'bg-white' : 'bg-gray-50'
            }`}
        >
            {/* Texto de la Pregunta */}
            <p class="text-base font-medium text-gray-900 mb-4 leading-snug">
            {question.text}
            </p>

            {/* Opciones como Botones */}
            <div class="flex flex-wrap gap-2">
            {options.map((option) => (
                <label class="flex-1 min-w-[80px] relative cursor-pointer">
                <input
                    type="radio"
                    name={`${question.id}`}
                    value={option.value}
                    class="peer sr-only"
                    required
                />
                <div
                    class="
                    flex items-center justify-center 
                    py-2 px-3 text-sm text-center
                    bg-white border border-gray-300 rounded-md
                    text-gray-700 transition-all
                    hover:bg-gray-50 hover:border-gray-400
                    peer-checked:border-blue-600 peer-checked:text-blue-600 peer-checked:bg-blue-50 peer-checked:font-medium
                    select-none
                    "
                >
                    {option.label} {option.value}
                </div>
                </label>
            ))}
            </div>
        </div>
        ))}
    </div>
</div>