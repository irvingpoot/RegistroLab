---
/**
 * @component CitaCard
 * @description Tarjeta de resumen para una cita individual.
 */

interface Props {
    cita: {
        id: string;
        nombre: string;
        fecha_hora: string;
        telefono: string | null;
        referencia: string;
        sintoma: string | null;
        observaciones: string | null;
        registrado_por_id: string | null;
        motivo: string | null;
        estado: 'pendiente' | 'completada' | 'cancelada' | null;
        atendido_por: string | null;
    };
}

const { cita } = Astro.props;

// ... (Tu lógica de WhatsApp y Colores se mantiene igual) ...
const generarLinkWhatsapp = () => {
    if (!cita.telefono) return '#';
    const numeroLimpio = cita.telefono.replace(/\D/g, '');
    const nombrePaciente = cita.nombre || "Paciente";
    const fechaTexto = new Date(cita.fecha_hora).toLocaleDateString('es-MX', { day: 'numeric', month: 'long' });
    const horaTexto = cita.fecha_hora ? new Date(cita.fecha_hora).toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit', hour12: true, timeZone: 'America/Merida' }) : '';
    const mensaje = `Hola ${nombrePaciente}, le escribimos de RegistroLab para confirmar su cita del día *${fechaTexto}* a las *${horaTexto}*. ¿Podría confirmar su asistencia?`;
    return `https://wa.me/52${numeroLimpio}?text=${encodeURIComponent(mensaje)}`;
};

const linkWA = generarLinkWhatsapp();
const horaFormateada = new Date(cita.fecha_hora).toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit', hour12: true, timeZone: 'America/Merida' });

const motivoColors = {
    entrevista: "bg-blue-500/20 text-blue-300 border-blue-500/50",
    seguimiento: "bg-purple-500/20 text-purple-300 border-purple-500/50",
    tratamiento: "bg-emerald-500/20 text-emerald-300 border-emerald-500/50",
    default: "bg-gray-700/50 text-gray-400 border-gray-600"
};

const colorClase = motivoColors[cita.motivo as keyof typeof motivoColors] || motivoColors.default;
const esPendiente = cita.estado === 'pendiente' || !cita.estado;
const motivoTexto = cita.motivo ? cita.motivo.replace('_', ' ') : "Sin motivo";
---

<div class="cita-card-container relative group bg-gray-900/40 border border-gray-800 hover:border-blue-500/30 p-6 rounded-2xl transition-all duration-300 hover:shadow-[0_0_30px_-10px_rgba(30,58,138,0.3)]">
    
    <div class="flex justify-between items-start gap-4 mb-3">
        <div class="flex-1 min-w-0">
            <div class="flex items-center gap-3 mb-1">
                <h4 class="text-xl font-semibold text-gray-100 capitalize text-pretty break-words leading-tight">{cita.nombre}</h4>
                <span class={`text-[10px] uppercase font-bold px-2 py-0.5 rounded border ${colorClase} whitespace-nowrap`}>{motivoTexto}</span>
            </div>
            <div class="flex items-center gap-1 text-sm text-gray-400 group/wa">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 text-blue-500 group-hover/wa:text-green-500 transition-colors shrink-0">
                    <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"/>
                </svg>
                {cita.telefono ? (
                    <a href={linkWA} target="_blank" rel="noopener noreferrer" class="hover:text-green-400 hover:font-bold transition-all cursor-pointer border-b border-transparent hover:border-green-400/50" title="Enviar WhatsApp de confirmación">{cita.telefono}</a>
                ) : (
                    <span>Sin teléfono registrado</span>
                )}
            </div>
        </div>
        <div class="flex flex-col items-end shrink-0">
            <span class="max-sm:text-xl text-2xl font-mono font-bold text-white tracking-tight whitespace-nowrap">{horaFormateada}</span>
            <span class="text-xs text-blue-400 font-medium uppercase tracking-widest mt-1">Hora</span>
        </div>
    </div>

    <div class="space-y-3">
        <div class="grid grid-cols-3 gap-2 py-3 border-t border-gray-800/50">
            <div><span class="block text-[10px] uppercase text-gray-500 font-bold">Atenderá:</span><span class="text-sm font-medium text-purple-300 break-words truncate" title={cita.atendido_por || "Sin asignar"}>{cita.atendido_por || "Sin asignar"}</span></div>
            <div><span class="block text-[10px] uppercase text-gray-500 font-bold">Referencia</span><span class="text-sm text-gray-300 text-wrap">{cita.referencia}</span></div>
            <div><span class="block text-[10px] uppercase text-gray-500 font-bold">Síntoma</span><span class="text-sm text-gray-300 text-wrap">{cita.sintoma || "—"}</span></div>
        </div>

        {cita.observaciones && (
            <div class="pt-2 pb-1">
                <span class="block text-[10px] uppercase text-gray-500 font-bold mb-1">Observaciones:</span>
                <p class="text-sm text-gray-300 italic leading-relaxed text-pretty bg-gray-800/30 p-2 rounded-lg border border-white/5">"{cita.observaciones}"</p>
            </div>
        )}

        {esPendiente && (
            <div class="mt-4 pl-0 flex justify-between items-center pt-3 border-t border-gray-800/50">
                <a href={`/editar-cita/${cita.id}`} class="text-xs text-gray-400 hover:text-white hover:underline flex items-center gap-1 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" /></svg> Editar
                </a>

                <div class="flex gap-2">
                    <button 
                        type="button"
                        onclick="this.closest('.cita-card-container').querySelector('dialog').showModal()"
                        class="h-8 w-8 rounded-full border border-gray-600 flex items-center justify-center text-gray-500 hover:bg-amber-500/20 hover:text-amber-400 hover:border-amber-500 transition-all cursor-pointer" 
                        title="Reagendar Cita"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>
                    </button>
                    
                    <form method="POST" class="flex gap-2">
                        <input type="hidden" name="id_cita" value={cita.id} />
                        <button type="submit" name="accion" value="cancelar" class="h-8 w-8 rounded-full border border-gray-600 flex items-center justify-center text-gray-500 hover:bg-red-500/20 hover:text-red-400 hover:border-red-500 transition-all cursor-pointer" title="Cancelar Cita" onclick="return confirm('¿Seguro que deseas cancelar esta cita?');">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" /></svg>
                        </button>
                        <button type="submit" name="accion" value="completar" class="h-8 w-8 rounded-full border border-gray-600 flex items-center justify-center text-gray-500 hover:bg-green-500/20 hover:text-green-400 hover:border-green-500 transition-all cursor-pointer" title="Marcar como Completada">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" /></svg>
                        </button>
                    </form>
                </div>
            </div>
        )}
    </div>

    <dialog class="bg-gray-900 border border-amber-500/30 rounded-xl p-6 shadow-2xl backdrop:backdrop-blur-sm m-auto max-w-sm w-full text-left" onclick="event.target === this && this.close()">
        <h3 class="text-lg font-bold text-white mb-2 flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
            Reagendar Cita
        </h3>
        <p class="text-xs text-gray-400 mb-4">Selecciona la nueva fecha y hora. La cita actual se marcará como cancelada automáticamente.</p>
        
        <form method="POST" class="flex flex-col gap-4">
            <input type="hidden" name="id_cita" value={cita.id} />
            <input type="hidden" name="accion" value="reagendar" /> 
            
            <div>
                <label class="block text-[10px] uppercase text-gray-500 font-bold mb-1">Nueva Fecha y Hora</label>
                <input 
                    type="datetime-local" 
                    name="nueva_fecha" 
                    required 
                    class="w-full bg-gray-800 border border-gray-600 rounded-lg p-2 text-white text-sm focus:border-amber-500 focus:outline-none"
                    style="color-scheme: dark;"
                />
            </div>

            <div class="flex justify-end gap-2 pt-2">
                <button type="button" onclick="this.closest('dialog').close()" class="px-3 py-2 text-xs font-medium text-gray-400 hover:text-white transition-colors cursor-pointer">Cancelar</button>
                <button type="submit" class="px-4 py-2 bg-amber-600 hover:bg-amber-500 text-white text-xs font-bold rounded-lg transition-colors shadow-lg shadow-amber-900/20 cursor-pointer">
                    Confirmar Cambio
                </button>
            </div>
        </form>
    </dialog>

</div>