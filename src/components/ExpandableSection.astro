---
interface Props {
    id: string;
}

const { id } = Astro.props;
---

<div id={id} class="grid grid-rows-[0fr] opacity-0 transition-all duration-500 ease-in-out">
    <div class="overflow-hidden">
        <div class="pl-6 border-l-4 border-blue-600 py-2 mt-2">
        <slot /> </div>
    </div>
</div>